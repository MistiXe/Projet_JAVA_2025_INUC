<!--                    <yAxis>-->
<!--                        <NumberAxis label="Nombre d'affaires" />-->
<!--                    </yAxis>-->
<!--                </BarChart>-->
<!--            </VBox>-->
<!--        </Tab>-->

    </TabPane>
</bottom>

</BorderPane>
