<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" alignment="CENTER" style="-fx-padding: 10;" fx:controller="com.example.demo.Controleur.ProfilPersonneController">
    <GridPane hgap="10" vgap="10">
        <!-- ID -->
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Prénom -->
        <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="prenomLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Nom -->
        <Label text="Nom:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="nomLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Adresses -->
        <Label text="Adresses:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="adressesLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Email -->
        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="emailLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Téléphone -->
        <Label text="Téléphone:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="telephoneLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Lieu de Naissance -->
        <Label text="Lieu de Naissance:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="lieuNaissanceLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <!-- Genre -->
        <Label text="Genre:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <Label fx:id="genreLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <!-- Nationalité -->
        <Label text="Nationalité:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <Label fx:id="nationaliteLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <!-- Casier Judiciaire -->
        <Label text="Casier Judiciaire:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <Label fx:id="casierJudiciaireLabel" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

        <!-- Statut Légal -->
        <Label text="Statut Légal:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
        <Label fx:id="statutLegalLabel" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

        <!-- Pseudonymes -->
        <Label text="Pseudonymes:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
        <Label fx:id="pseudonymesLabel" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

        <!-- Description Physique -->
        <Label text="Description Physique:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
        <Label fx:id="descriptionPhysiqueLabel" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

        <!-- Photo URL -->
        <Label text="URL Photo:" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
        <Label fx:id="photoUrlLabel" GridPane.rowIndex="13" GridPane.columnIndex="1"/>

        <!-- Dernière Localisation -->
        <Label text="Dernière Localisation:" GridPane.rowIndex="14" GridPane.columnIndex="0"/>
        <Label fx:id="derniereLocalisationLabel" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

        <!-- Notes -->
        <Label text="Notes:" GridPane.rowIndex="15" GridPane.columnIndex="0"/>
        <Label fx:id="notesLabel" GridPane.rowIndex="15" GridPane.columnIndex="1"/>
    </GridPane>
    <Button text="Retour" onAction="#handleRetourAction"/>
</VBox>
